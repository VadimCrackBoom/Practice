<Window x:Class="todo.LogIn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:todo"
        mc:Ignorable="d"
        Title="LogIn" Height="600" Width="800" WindowStartupLocation="CenterScreen" ResizeMode="CanResizeWithGrip">
    <Canvas Height="600" Width="800">
        <Image Height="150" Margin="51,42,593,0" VerticalAlignment="Top" Source="/logo.png"/>

        <Label Content="Добро пожаловать!" HorizontalAlignment="Left" VerticalAlignment="Top" Width="300" Height="50" FontSize="30" Canvas.Left="400" Canvas.Top="42"/>
        <Label Content="Почта" FontSize="20" Height="43" Width="200" Canvas.Left="417" Canvas.Top="198" RenderTransformOrigin="0.512,1.556" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <TextBox x:Name="emailTB" TextWrapping="Wrap" VerticalAlignment="Top" Width="300" Height="18" Text="Введите почту" BorderThickness="0,0,0,1" Tag="Введите почту" FontSize="14" LostFocus="AddText" GotFocus="RemoveText" Opacity="0.4" Canvas.Left="417" Canvas.Top="258">
            <TextBox.BorderBrush>
                <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ActiveBorderColorKey}}"/>
            </TextBox.BorderBrush>
        </TextBox>
        <Label Content="Пароль" FontSize="20" Height="38" Width="179" Canvas.Left="417" Canvas.Top="281"/>
        <TextBox x:Name="passwordTB" TextWrapping="Wrap" VerticalAlignment="Top" Width="300" Height="18" Text="Введите пароль" BorderThickness="0,0,0,1" Tag="Введите пароль" LostFocus="AddText" GotFocus="RemoveText" FontSize="14" Opacity="0.4" Canvas.Left="417" Canvas.Top="343">
            <TextBox.BorderBrush>
                <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ActiveBorderColorKey}}"/>
            </TextBox.BorderBrush>
        </TextBox>
        <Label Content="Восстановить пароль" FontSize="20" Height="43" Width="204" HorizontalAlignment="Right" VerticalAlignment="Top" Canvas.Left="496" Canvas.Top="361"/>
        <Button Background="#FFF96060" BorderBrush="#FFF96060" Foreground="White" Content="Регистрация" Width="300" Height="40" FontSize="16" Click="Button_Click" Canvas.Left="400" Canvas.Top="502">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="5, 5, 20, 20"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button Background="#FFF96060" BorderBrush="#FFF96060" Foreground="White" Content="Войти" Width="300" Height="40" FontSize="16" Click="Button_Click_1" Canvas.Left="400" Canvas.Top="457">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="20, 20, 5, 5"/>
                </Style>
            </Button.Resources>
        </Button>

    </Canvas>
</Window>
