<Window x:Class="todo.Tasks"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tasks" Height="450" Width="800">
    <Canvas x:Name="grid">
        <Image HorizontalAlignment="Left" Height="76" VerticalAlignment="Top" Width="76" Source="/Фото профиля.png" Margin="10,10,0,0"/>

        <!-- Заголовки категорий задач -->
        <Label x:Name="HomeTask" Content="Дом" HorizontalAlignment="Left" Margin="124,64,0,0" VerticalAlignment="Top" FontSize="16" Foreground="#FF0FFF33"/>
        <Label x:Name="WorkingTask" Content="Работа" HorizontalAlignment="Left" Margin="184,64,0,0" VerticalAlignment="Top" FontSize="16" Foreground="#FFFF6900"/>
        <Label x:Name="LessonsTask" Content="Учёба" HorizontalAlignment="Left" Margin="265,64,0,0" VerticalAlignment="Top" FontSize="16" Foreground="#FF001BFF"/>
        <Label x:Name="ChillTask" Content="Отдых" HorizontalAlignment="Left" Margin="337,64,0,0" VerticalAlignment="Top" FontSize="16" Foreground="#FFCE00FF"/>

        <!-- Заголовок для списка задач -->
        <Label Content="Задачи" HorizontalAlignment="Left" Margin="23,163,0,0" VerticalAlignment="Top" FontSize="16"/>

        <Button x:Name="AddTask" Height="42" Canvas.Left="27" Canvas.Top="338" Width="32" HorizontalAlignment="Left" VerticalAlignment="Top" Background="#FFFF0606" Content="+" Foreground="#FFFCFCFC" FontSize="16" FontWeight="Bold" Click="AddTask_Click"/>

        <!-- Первый ListBox для отображения списка задач -->
        <ListBox x:Name="TaskList" Height="298" Canvas.Left="145" Width="222" SelectionChanged="TaskList_SelectionChanged" Canvas.Top="103" />

        <!-- Второй ListBox для отображения описания выбранной задачи -->
        <ListBox x:Name="TaskDescriptionList" Height="321" Canvas.Left="529" Canvas.Top="103" Width="222" SelectionChanged="TaskDescriptionList_SelectionChanged" HorizontalAlignment="Center" VerticalAlignment="Top" />

        <!-- Кнопки для управления задачами -->
        <Button x:Name="ReadyTask" Background="#FFF96060" BorderBrush="#FFF96060" Foreground="White" Content="Готово" Width="186" Height="40" FontSize="14" Click="Button_Click_1" Canvas.Left="547" Canvas.Top="312" Visibility="Collapsed"/>
        <Button x:Name="DeleteTask" Background="#FFF96060" BorderBrush="#FFF96060" Foreground="White" Content="Удалить" Width="186" Height="40" FontSize="14" Click="Button_Click" Canvas.Left="547" Canvas.Top="370" Visibility="Collapsed"/>
        <Label x:Name="HistoryTask" Content="История" FontSize="16" Canvas.Left="18" Canvas.Top="212" HorizontalAlignment="Left" VerticalAlignment="Center"/>
    </Canvas>
</Window>
