<Window x:Class="todo.Tasks" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:local="clr-namespace:todo" 
        mc:Ignorable="d" 
        Title="Tasks" Height="450" Width="800">
    <Grid>
        <Button x:Name="AddTask" Margin="15,371,747,17" RenderTransformOrigin="0.5,0.5" Content="+" Background="#FFFD6969" Foreground="White">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.0"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Image HorizontalAlignment="Left" Height="76" VerticalAlignment="Top" Width="76" Source="/Фото профиля.png" Margin="10,10,0,0"/>
        <Label x:Name="HomeTask" Content="Дом" HorizontalAlignment="Left" Height="40" Margin="135,64,0,0" VerticalAlignment="Top" Width="88" Foreground="#FF01F173" FontSize="18"/>
        <Label x:Name="WorkTask" Content="Работа" HorizontalAlignment="Left" Height="40" Margin="179,66,0,0" VerticalAlignment="Top" Width="88" Foreground="#FFE6B406" HorizontalContentAlignment="Center" FontSize="18"/>
        <Label x:Name="StudyTask" Content="Учёба" HorizontalAlignment="Left" Height="40" Margin="272,66,0,0" VerticalAlignment="Top" Width="88" Foreground="#FF0CAAFD" FontSize="18"/>
        <Label x:Name="ChillTask" Content="Отдых" HorizontalAlignment="Left" Height="40" Margin="344,66,0,0" VerticalAlignment="Top" Width="88" Foreground="#FF7101FF" FontSize="18" RenderTransformOrigin="0.105,0.569"/>
        <Label x:Name="TaskManagers" Content="Задачи" HorizontalAlignment="Left" Height="34" Margin="29,140,0,0" VerticalAlignment="Top" Width="109" FontSize="16" HorizontalContentAlignment="Center"/>
        <Label x:Name="HistoryTasks" Content="История" HorizontalAlignment="Left" Height="34" Margin="29,183,0,0" VerticalAlignment="Top" Width="109" FontSize="16" HorizontalContentAlignment="Center"/>

        <!-- Scrollable checkbox list -->
        <ScrollViewer HorizontalAlignment="Left" VerticalAlignment="Center" Margin="138,0,0,0" Width="303" Height="200">
            <StackPanel x:Name="taskStackPanel">
                <CheckBox x:Name="TaskNumber1" Content="Задача 1" Margin="5" 
          Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked"/>
                <CheckBox x:Name="TaskNumber2" Content="Задача 2" Margin="5" 
          Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked"/>
                <CheckBox x:Name="TaskNumber3" Content="Задача 3" Margin="5" 
          Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked"/>
                <CheckBox x:Name="TaskNumber4" Content="Задача 4" Margin="5" 
          Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked"/>
                <CheckBox x:Name="TaskNumber5" Content="Задача 5" Margin="5" 
          Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked"/>
                <CheckBox x:Name="TaskNumber6" Content="Задача 6" Margin="5" 
          Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked"/>
                <CheckBox x:Name="TaskNumber7" Content="Задача 7" Margin="5" 
          Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked"/>
                <CheckBox x:Name="TaskNumber8" Content="Задача 8" Margin="5" 
          Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked"/>
                <CheckBox x:Name="TaskNumber9" Content="Задача 9" Margin="5" 
          Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked"/>
                <CheckBox x:Name="TaskNumber10" Content="Задача 10" Margin="5" 
          Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked"/>
                <CheckBox x:Name="TaskNumber11" Content="Задача 11" Margin="5" 
          Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked"/>
                <CheckBox x:Name="TaskNumber12" Content="Задача 12" Margin="5" 
          Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked"/>

                <!-- Добавьте больше чекбоксов, если нужно -->
            </StackPanel>
        </ScrollViewer>
        <Rectangle HorizontalAlignment="Left" Height="273" Margin="501,86,0,0" Stroke="Black" VerticalAlignment="Top" Width="263"/>
    </Grid>
</Window>
