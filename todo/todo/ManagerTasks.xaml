<Window x:Class="todo.ManagerTasks"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:todo"
        mc:Ignorable="d"
        Title="ManagerTasks" Height="450" Width="800">
    <Canvas x:Name="ManagerTasks1" Background="#FFE2DBDB">
        <Label x:Name="NameTask" Content=" Название" HorizontalAlignment="Left" VerticalAlignment="Top" Width="117" FontSize="18" Foreground="Black" Canvas.Left="25" Canvas.Top="17"/>
        <TextBox x:Name="nametask1" Height="29" Canvas.Left="25" Canvas.Top="65" Width="171" TextChanged="TextBox_TextChanged" HorizontalAlignment="Center" VerticalAlignment="Top">
            <TextBox.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="3"/>
                </Style>
            </TextBox.Resources>
        </TextBox>
        <Label x:Name="TypeTask" Content="Категория" Width="117" FontSize="18" Foreground="Black" Canvas.Left="25" Canvas.Top="113" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <TextBox x:Name="type" Height="29" Canvas.Left="25" Canvas.Top="165" Width="171" TextChanged="TextBox_TextChanged" HorizontalAlignment="Center" VerticalAlignment="Top">
            <TextBox.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="3"/>
                </Style>
            </TextBox.Resources>
        </TextBox>
        <TextBox x:Name="DescriptionTextBox" Height="66" Canvas.Left="25" Canvas.Top="267" Width="256" TextChanged="TextBox_TextChanged" HorizontalAlignment="Center" VerticalAlignment="Top">
            <TextBox.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="3"/>
                </Style>
            </TextBox.Resources>
        </TextBox>
        <Label x:Name="TippingTask" Content="Описание" Width="117" FontSize="18" Foreground="Black" Canvas.Left="25" Canvas.Top="217" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <DatePicker Height="154" Canvas.Left="544" Canvas.Top="80" Width="206" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Button x:Name="AddedTask" Background="#FF60F96E" BorderBrush="#FFF96060" Foreground="White" Content="Cоздать" Height="40" FontSize="16" Width="204" Click="Button_Click" HorizontalAlignment="Left" Canvas.Left="120" Canvas.Top="373" VerticalAlignment="Top">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="5, 5, 5, 5"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button x:Name="CancelTask" Background="#FFF96060" BorderBrush="#FFF96060" Foreground="White" Content="Отмена" Height="40" FontSize="16" Width="204" Click="Button_Click" Canvas.Left="497" Canvas.Top="373" HorizontalAlignment="Left" VerticalAlignment="Center">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="5, 5, 5, 5"/>
                </Style>
            </Button.Resources>
        </Button>

    </Canvas>
</Window>
